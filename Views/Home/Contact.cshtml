@{
    ViewData["Title"] = "Liên hệ";
}

<div class="font-sans text-gray-800">

    <section class="relative bg-white pt-20 pb-16 lg:pt-32 lg:pb-24 overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-gray-50 via-white to-white"></div>

        <div class="container mx-auto px-4 relative z-10 text-center">
            <span class="inline-block py-1 px-3 rounded-full bg-gray-100 text-gray-600 text-xs font-bold uppercase tracking-wider mb-6 border border-gray-200">
                Hỗ trợ 24/7
            </span>
            <h1 class="text-4xl md:text-5xl font-black mb-6">
                Chúng tôi luôn sẵn sàng <br />
                <span>lắng nghe bạn</span>
            </h1>
            <p class="text-lg max-w-2xl mx-auto mb-10">
                Dù là thắc mắc về khóa học hay cần hỗ trợ kỹ thuật, đội ngũ ToanHocHay sẽ phản hồi nhanh nhất có thể.
            </p>
        </div>
    </section>

    <section class="py-12 bg-white">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-12 max-w-6xl mx-auto">

                <div class="w-full lg:w-1/3 space-y-8">
                    <div class="bg-gray-50 rounded-3xl p-8 border border-gray-100">
                        <h3 class="font-bold text-xl mb-6">Thông tin liên hệ</h3>

                        <div class="space-y-6">
                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-700 flex-shrink-0">
                                    <i class="fa-solid fa-location-dot"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-sm">Văn phòng chính</p>
                                    <p class="text-sm mt-1 leading-relaxed opacity-80">
                                        FPTU <br>
                                        Hòa Lạc
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-700 flex-shrink-0">
                                    <i class="fa-solid fa-phone"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-sm">Hotline hỗ trợ</p>
                                    <p class="text-sm mt-1">
                                        <a href="tel:1900123456" class="hover:text-blue-600 font-medium transition">1900 123 456</a>
                                        <span class="text-xs opacity-60">(8:00 - 22:00)</span>
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-4">
                                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-gray-700 flex-shrink-0">
                                    <i class="fa-solid fa-envelope"></i>
                                </div>
                                <div>
                                    <p class="font-bold text-sm">Email</p>
                                    <p class="text-sm mt-1">
                                        <a href="mailto:support@toanhochay.vn" class="hover:text-blue-600 transition">support@toanhochay.vn</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-8 pt-8 border-t border-gray-200">
                            <p class="font-bold text-sm mb-4">Kết nối mạng xã hội</p>
                            <div class="flex gap-3">
                                <a href="#" class="w-10 h-10 rounded-full bg-white border border-gray-200 flex items-center justify-center text-gray-400 hover:bg-gray-100 hover:text-gray-800 transition">
                                    <i class="fa-brands fa-facebook-f"></i>
                                </a>
                                <a href="#" class="w-10 h-10 rounded-full bg-white border border-gray-200 flex items-center justify-center text-gray-400 hover:bg-gray-100 hover:text-gray-800 transition">
                                    <i class="fa-brands fa-youtube"></i>
                                </a>
                                <a href="#" class="w-10 h-10 rounded-full bg-white border border-gray-200 flex items-center justify-center text-gray-400 hover:bg-gray-100 hover:text-gray-800 transition">
                                    <i class="fa-brands fa-tiktok"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="bg-blue-600 rounded-3xl p-8 text-white text-center shadow-lg relative overflow-hidden group cursor-pointer hover:bg-blue-700 transition duration-300">
                        <i class="fa-brands fa-facebook-messenger text-4xl mb-4 opacity-90"></i>
                        <h3 class="font-bold text-lg mb-2">Chat trực tiếp</h3>
                        <p class="text-blue-100 text-sm mb-4">Nhận phản hồi ngay lập tức qua Messenger</p>
                        <span class="inline-block bg-white/20 px-4 py-2 rounded-full text-xs font-bold backdrop-blur-sm group-hover:bg-white group-hover:text-blue-800 transition">Bắt đầu chat</span>
                    </div>
                </div>

                <div class="w-full lg:w-2/3">
                    <div class="bg-white rounded-3xl shadow-xl shadow-gray-200/50 p-8 md:p-12 border border-gray-100">
                        <h2 class="text-2xl font-bold mb-6">Gửi tin nhắn</h2>

                        <form>
                            <div class="grid md:grid-cols-2 gap-6 mb-6">
                                <div>
                                    <label class="block text-xs font-bold uppercase tracking-wider mb-2 opacity-70">Họ tên</label>
                                    <input type="text" placeholder="Nhập họ tên của bạn" class="w-full bg-gray-50 border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition border">
                                </div>
                                <div>
                                    <label class="block text-xs font-bold uppercase tracking-wider mb-2 opacity-70">Số điện thoại</label>
                                    <input type="text" placeholder="Nhập số điện thoại" class="w-full bg-gray-50 border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition border">
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-6 mb-6">
                                <div>
                                    <label class="block text-xs font-bold uppercase tracking-wider mb-2 opacity-70">Email</label>
                                    <input type="email" placeholder="email@example.com" class="w-full bg-gray-50 border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition border">
                                </div>
                                <div>
                                    <label class="block text-xs font-bold uppercase tracking-wider mb-2 opacity-70">Vấn đề cần hỗ trợ</label>
                                    <select class="w-full bg-gray-50 border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition border cursor-pointer">
                                        <option>Tư vấn khóa học</option>
                                        <option>Lỗi kỹ thuật / Đăng nhập</option>
                                        <option>Thanh toán & Hóa đơn</option>
                                        <option>Hợp tác / Đối tác</option>
                                        <option>Khác</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-8">
                                <label class="block text-xs font-bold uppercase tracking-wider mb-2 opacity-70">Nội dung chi tiết</label>
                                <textarea rows="5" placeholder="Mô tả vấn đề của bạn..." class="w-full bg-gray-50 border-gray-200 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:border-transparent transition border resize-none"></textarea>
                            </div>

                            <button class="w-full bg-gray-800 hover:bg-gray-900 text-white font-bold py-4 rounded-xl shadow-lg shadow-gray-400/20 transition transform hover:-translate-y-1">
                                Gửi yêu cầu hỗ trợ
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4 max-w-6xl">
            <div class="bg-white p-4 rounded-3xl shadow-sm border border-gray-200">
                <div class="bg-gray-100 rounded-2xl h-80 w-full flex items-center justify-center relative overflow-hidden group cursor-pointer">
                    <div class="absolute inset-0 bg-gray-200 animate-pulse"></div>
                    <div class="relative z-10 text-center">
                        <i class="fa-solid fa-map-location-dot text-4xl text-gray-400 mb-2 group-hover:text-gray-600 transition"></i>
                        <p class="text-gray-500 font-medium">Bản đồ Google Maps sẽ hiển thị tại đây</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Yêu cầu của bạn đã được gửi đi! Chúng tôi sẽ liên hệ lại sớm.');
        });
    </script>
}