<!-- HỖ TRỢ NHANH -->
<section class="bg-gradient-to-br from-blue-50 to-purple-50 py-16 border-t border-gray-200">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-extrabold text-gray-800">Các kênh hỗ trợ nhanh</h2>
            <p class="text-gray-500 mt-2">Chọn cách liên hệ phù hợp nhất với bạn</p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 max-w-5xl mx-auto">

            <!-- Hỗ trợ 1: Live Chat -->
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 hover:shadow-lg transition text-center group">
