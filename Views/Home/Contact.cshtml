@{
    ViewData["Title"] = "Liên hệ";
}

<div class="font-sans text-gray-800">

    @* --- HERO SECTION ĐỒNG BỘ --- *@
    <section class="relative bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600 text-white py-20 overflow-hidden">
        @* Họa tiết khối vuông chìm *@
        <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>

        @* Hiệu ứng mờ ảo (Blobs) *@
        <div class="absolute top-0 left-0 -ml-20 -mt-20 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 right-0 -mr-20 -mb-20 w-80 h-80 bg-purple-400 opacity-20 rounded-full blur-3xl"></div>

        <div class="container mx-auto px-4 relative z-10 text-center">
            <div class="max-w-4xl mx-auto">
                <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-xs font-bold px-4 py-2 rounded-full mb-6 border border-white/30 tracking-widest uppercase">
                    <i class="fa-solid fa-headset mr-1"></i> Hỗ trợ 24/7
                </span>

                @* Cỡ chữ md:text-6xl đồng bộ với trang About *@
                <h1 class="text-4xl md:text-6xl font-black mb-8 leading-tight tracking-tight">
                    Chúng tôi luôn sẵn sàng <br />
                    <span class="text-yellow-300">lắng nghe bạn</span>
                </h1>

                <p class="text-lg md:text-xl text-blue-100 max-w-2xl mx-auto leading-relaxed">
                    Dù là thắc mắc về khóa học hay cần hỗ trợ kỹ thuật, đội ngũ ToanHocHay sẽ phản hồi nhanh nhất có thể.
                </p>
            </div>
        </div>
    </section>

    @* --- PHẦN FORM VÀ THÔNG TIN LIÊN HỆ --- *@
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-12 max-w-6xl mx-auto">

                <div class="w-full lg:w-1/3 space-y-8">
                    <div class="bg-gray-50 rounded-[2rem] p-10 border border-gray-100 shadow-sm">
                        <h3 class="font-black text-2xl mb-8 text-gray-900">Thông tin liên hệ</h3>

                        <div class="space-y-8">
                            <div class="flex items-start gap-5">
                                <div class="w-12 h-12 rounded-2xl bg-blue-100 flex items-center justify-center text-blue-600 text-xl flex-shrink-0 shadow-sm">
                                    <i class="fa-solid fa-location-dot"></i>
                                </div>
                                <div>
                                    <p class="font-black text-gray-900 uppercase text-xs tracking-widest mb-1">Văn phòng chính</p>
                                    <p class="text-gray-600 leading-relaxed font-medium">
                                        Hòa Lạc <br>
                                        Hà Nội
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-5">
                                <div class="w-12 h-12 rounded-2xl bg-green-100 flex items-center justify-center text-green-600 text-xl flex-shrink-0 shadow-sm">
                                    <i class="fa-solid fa-phone"></i>
                                </div>
                                <div>
                                    <p class="font-black text-gray-900 uppercase text-xs tracking-widest mb-1">Hotline hỗ trợ</p>
                                    <p class="text-gray-600 font-medium">
                                        <a href="tel:1900123456" class="hover:text-blue-600 transition text-lg font-bold">0979 361 794</a>
                                        <span class="block text-xs opacity-60 mt-1">(Hoạt động 8:00 - 22:00 hàng ngày)</span>
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-start gap-5">
                                <div class="w-12 h-12 rounded-2xl bg-purple-100 flex items-center justify-center text-purple-600 text-xl flex-shrink-0 shadow-sm">
                                    <i class="fa-solid fa-envelope"></i>
                                </div>
                                <div>
                                    <p class="font-black text-gray-900 uppercase text-xs tracking-widest mb-1">Email</p>
                                    <p class="text-gray-600 font-medium">
                                        <a href="mailto:toanhochay1@gmail.com" class="hover:text-blue-600 transition">toanhochay1@gmail.com</a>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mt-10 pt-10 border-t border-gray-200">
                            <p class="font-black text-gray-900 uppercase text-xs tracking-widest mb-6">Kết nối mạng xã hội</p>
                            <div class="flex gap-4">
                                <a href="#" class="w-12 h-12 rounded-2xl bg-white border border-gray-200 shadow-sm flex items-center justify-center text-gray-400 hover:bg-blue-600 hover:text-white hover:border-blue-600 transition duration-300">
                                    <i class="fa-brands fa-facebook-f text-xl"></i>
                                </a>
                                <a href="#" class="w-12 h-12 rounded-2xl bg-white border border-gray-200 shadow-sm flex items-center justify-center text-gray-400 hover:bg-red-600 hover:text-white hover:border-red-600 transition duration-300">
                                    <i class="fa-brands fa-youtube text-xl"></i>
                                </a>
                                <a href="#" class="w-12 h-12 rounded-2xl bg-white border border-gray-200 shadow-sm flex items-center justify-center text-gray-400 hover:bg-black hover:text-white hover:border-black transition duration-300">
                                    <i class="fa-brands fa-tiktok text-xl"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="bg-blue-600 rounded-[2rem] p-10 text-white text-center shadow-xl relative overflow-hidden group cursor-pointer hover:bg-blue-700 transition duration-300">
                        <div class="absolute top-0 right-0 w-24 h-24 bg-white opacity-10 rounded-full -mr-10 -mt-10 blur-xl"></div>
                        <i class="fa-brands fa-facebook-messenger text-5xl mb-6 opacity-90 group-hover:scale-110 transition duration-300"></i>
                        <h3 class="font-black text-xl mb-3">Chat trực tiếp</h3>
                        <p class="text-blue-100 text-sm mb-6 opacity-80 font-medium">Nhận phản hồi ngay lập tức từ tư vấn viên qua Messenger</p>
                        <span class="inline-block bg-white text-blue-700 px-8 py-3 rounded-full text-sm font-black shadow-lg group-hover:bg-blue-50 transition">Bắt đầu ngay</span>
                    </div>
                </div>

                <div class="w-full lg:w-2/3">
                    <div class="bg-white rounded-[2.5rem] shadow-2xl shadow-gray-200/60 p-8 md:p-14 border border-gray-100">
                        <h2 class="text-3xl font-black mb-8 text-gray-900">Liên hệ</h2>

                        <form id="contactForm">
                            <div class="grid md:grid-cols-2 gap-8 mb-8">
                                <div>
                                    <label class="block text-xs font-black uppercase tracking-widest mb-3 text-gray-400">Họ và tên</label>
                                    <input type="text" placeholder="Nguyễn Văn A" class="w-full bg-gray-50 border-gray-200 rounded-2xl px-6 py-4 focus:outline-none focus:ring-4 focus:ring-blue-50 focus:border-blue-400 transition-all border font-medium">
                                </div>
                                <div>
                                    <label class="block text-xs font-black uppercase tracking-widest mb-3 text-gray-400">Số điện thoại</label>
                                    <input type="text" placeholder="09xx xxx xxx" class="w-full bg-gray-50 border-gray-200 rounded-2xl px-6 py-4 focus:outline-none focus:ring-4 focus:ring-blue-50 focus:border-blue-400 transition-all border font-medium">
                                </div>
                            </div>

                            <div class="grid md:grid-cols-2 gap-8 mb-8">
                                <div>
                                    <label class="block text-xs font-black uppercase tracking-widest mb-3 text-gray-400">Địa chỉ Email</label>
                                    <input type="email" placeholder="example@gmail.com" class="w-full bg-gray-50 border-gray-200 rounded-2xl px-6 py-4 focus:outline-none focus:ring-4 focus:ring-blue-50 focus:border-blue-400 transition-all border font-medium">
                                </div>

                                <div>
                                    <label class="block text-xs font-black uppercase tracking-widest mb-3 text-gray-400">Vấn đề cần hỗ trợ</label>
                                    <div class="relative">
                                        <select id="main-issue" class="w-full bg-gray-50 border-gray-200 rounded-2xl px-6 py-4 focus:outline-none focus:ring-4 focus:ring-blue-50 focus:border-blue-400 transition-all border cursor-pointer font-bold text-gray-700 appearance-none">
                                            <option value="none">Chọn vấn đề...</option>
                                            <option value="consult">Tư vấn khóa học</option>
                                            <option value="tech">Lỗi kỹ thuật / Đăng nhập</option>
                                            <option value="billing">Thanh toán & Hóa đơn</option>
                                            <option value="partner">Hợp tác / Đối tác</option>
                                            <option value="other">Khác</option>
                                        </select>
                                        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-6 text-gray-400">
                                            <i class="fa-solid fa-chevron-down text-xs"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-10">
                                <label class="block text-xs font-black uppercase tracking-widest mb-3 text-gray-400">Nội dung chi tiết</label>
                                <textarea rows="6" placeholder="Chào ToanHocHay, tôi muốn hỏi về..." class="w-full bg-gray-50 border-gray-200 rounded-3xl px-6 py-4 focus:outline-none focus:ring-4 focus:ring-blue-50 focus:border-blue-400 transition-all border resize-none font-medium"></textarea>
                            </div>

                            <button type="submit" class="w-full bg-gray-900 hover:bg-blue-700 text-white font-black py-5 rounded-2xl shadow-xl transition-all transform hover:-translate-y-1 active:scale-95 flex items-center justify-center gap-3">
                                <i class="fa-solid fa-paper-plane"></i>
                                Gửi yêu cầu hỗ trợ ngay
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

    @* --- GOOGLE MAPS --- *@
    <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4 max-w-6xl text-center">
            <h2 class="text-3xl font-black mb-10 text-gray-900">Vị trí của chúng tôi</h2>
            <div class="bg-white p-4 rounded-[2.5rem] shadow-xl border border-gray-200 overflow-hidden group">
                <div class="bg-gray-100 rounded-[1.5rem] h-[450px] w-full flex items-center justify-center relative overflow-hidden group-hover:shadow-inner transition">
                    @* Mã nhúng Google Maps thật cho khu vực Hòa Lạc *@
                    <iframe class="absolute inset-0 w-full h-full border-0 grayscale hover:grayscale-0 transition duration-700"
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.4855345751493!2d105.5248756153319!3d21.01323399368536!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31345b465a4e65fb%3A0xaae60564613fce!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBGUFQ!5e0!3m2!1svi!2s!4v1625000000000!5m2!1svi!2s"
                            allowfullscreen=""
                            loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </section>

</div>

@section Scripts {
    <script>
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // Hiệu ứng nút gửi
            const btn = this.querySelector('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fa-solid fa-circle-notch animate-spin"></i> Đang gửi...';
            btn.disabled = true;

            setTimeout(() => {
                alert('Yêu cầu của bạn đã được gửi thành công! Chúng tôi sẽ liên hệ lại qua Email/SĐT trong vòng 24h.');
                btn.innerHTML = originalText;
                btn.disabled = false;
                this.reset();
            }, 1500);
        });
    </script>
}