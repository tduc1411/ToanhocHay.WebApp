@{
    ViewData["Title"] = "Liên hệ";
}

<!-- HERO SECTION -->
<section class="relative bg-gradient-to-br from-purple-600 via-blue-600 to-blue-500 text-white py-20 overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
            <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-xs font-bold px-4 py-2 rounded-full mb-6 border border-white/30">
                Liên hệ với chúng tôi
            </span>
            <h1 class="text-4xl md:text-5xl font-extrabold mb-6 leading-tight">
                Chúng tôi luôn sẵn sàng<br />
                <span class="text-yellow-300">lắng nghe bạn</span>
            </h1>
            <p class="text-lg text-blue-100 leading-relaxed max-w-2xl mx-auto">
                Có thắc mắc về khóa học? Cần hỗ trợ kỹ thuật? Hoặc chỉ đơn giản muốn chia sẻ ý kiến?
                Đừng ngần ngại liên hệ với chúng tôi!
            </p>
        </div>
    </div>
    <div class="absolute top-10 left-10 w-32 h-32 bg-purple-400/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-10 right-10 w-40 h-40 bg-blue-400/20 rounded-full blur-3xl"></div>
</section>

<!-- CONTACT INFO & FORM -->
<section class="container mx-auto px-4 py-16">
    <div class="grid lg:grid-cols-3 gap-8">

        <!-- LEFT: CONTACT INFO -->
        <div class="lg:col-span-1 space-y-6">

            <!-- Card 1: Địa chỉ -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition group">
                <div class="flex items-start gap-4">
                    <div class="w-14 h-14 bg-blue-100 rounded-xl flex items-center justify-center text-blue-600 text-2xl flex-shrink-0 group-hover:scale-110 transition">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-800 mb-2">Địa chỉ văn phòng</h3>
                        <p class="text-sm text-gray-600 leading-relaxed">
                            Tầng 5, Tòa nhà Innovation<br />
                            123 Nguyễn Huệ, Quận 1<br />
                            TP. Hồ Chí Minh
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 2: Điện thoại -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition group">
                <div class="flex items-start gap-4">
                    <div class="w-14 h-14 bg-green-100 rounded-xl flex items-center justify-center text-green-600 text-2xl flex-shrink-0 group-hover:scale-110 transition">
                        <i class="fa-solid fa-phone"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-800 mb-2">Điện thoại</h3>
                        <p class="text-sm text-gray-600 mb-1">
                            Hotline: <a href="tel:1900123456" class="text-primary hover:underline font-semibold">1900 123 456</a>
                        </p>
                        <p class="text-sm text-gray-600">
                            Hỗ trợ: <a href="tel:0987654321" class="text-primary hover:underline font-semibold">098 765 4321</a>
                        </p>
                        <p class="text-xs text-gray-400 mt-2">Thời gian: 8:00 - 22:00 hàng ngày</p>
                    </div>
                </div>
            </div>

            <!-- Card 3: Email -->
            <div class="bg-white rounded-2xl p-6 shadow-sm border border-gray-100 hover:shadow-lg transition group">
                <div class="flex items-start gap-4">
                    <div class="w-14 h-14 bg-purple-100 rounded-xl flex items-center justify-center text-purple-600 text-2xl flex-shrink-0 group-hover:scale-110 transition">
                        <i class="fa-solid fa-envelope"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-800 mb-2">Email</h3>
                        <p class="text-sm text-gray-600 mb-1">
                            Chung: <a href="mailto:info@toanhochay.vn" class="text-primary hover:underline font-semibold block">info@toanhochay.vn</a>
                        </p>
                        <p class="text-sm text-gray-600">
                            Hỗ trợ: <a href="mailto:support@toanhochay.vn" class="text-primary hover:underline font-semibold block">support@toanhochay.vn</a>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Card 4: Mạng xã hội -->
            <div class="bg-gradient-to-br from-blue-600 to-purple-600 rounded-2xl p-6 text-white shadow-lg">
                <h3 class="font-bold mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-share-nodes"></i> Kết nối với chúng tôi
                </h3>
                <div class="flex gap-3">
                    <a href="#" class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl flex items-center justify-center text-xl transition backdrop-blur-sm">
                        <i class="fa-brands fa-facebook-f"></i>
                    </a>
                    <a href="#" class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl flex items-center justify-center text-xl transition backdrop-blur-sm">
                        <i class="fa-brands fa-youtube"></i>
                    </a>
                    <a href="#" class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl flex items-center justify-center text-xl transition backdrop-blur-sm">
                        <i class="fa-brands fa-tiktok"></i>
                    </a>
                    <a href="#" class="w-12 h-12 bg-white/20 hover:bg-white/30 rounded-xl flex items-center justify-center text-xl transition backdrop-blur-sm">
                        <i class="fa-brands fa-telegram"></i>
                    </a>
                </div>
            </div>

        </div>

        <!-- RIGHT: CONTACT FORM -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
                <div class="mb-8">
                    <h2 class="text-2xl font-extrabold text-gray-800 mb-2">Gửi tin nhắn cho chúng tôi</h2>
                    <p class="text-sm text-gray-500">Điền thông tin bên dưới, chúng tôi sẽ phản hồi trong vòng 24 giờ.</p>
                </div>

                <form class="space-y-6">
                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- Họ tên -->
                        <div>
                            <label class="block text-sm font-bold text-gray-700 mb-2">
                                Họ và tên <span class="text-red-500">*</span>
                            </label>
                            <input type="text" placeholder="Nguyễn Văn A" required
                                   class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-blue-100 outline-none transition text-sm">
                        </div>

                        <!-- Số điện thoại -->
                        <div>
                            <label class="block text-sm font-bold text-gray-700 mb-2">
                                Số điện thoại <span class="text-red-500">*</span>
                            </label>
                            <input type="tel" placeholder="098 765 4321" required
                                   class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-blue-100 outline-none transition text-sm">
                        </div>
                    </div>

                    <!-- Email -->
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">
                            Email <span class="text-red-500">*</span>
                        </label>
                        <input type="email" placeholder="email@example.com" required
                               class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-blue-100 outline-none transition text-sm">
                    </div>

                    <!-- Chủ đề -->
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">
                            Chủ đề <span class="text-red-500">*</span>
                        </label>
                        <select required class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-blue-100 outline-none transition text-sm">
                            <option value="">-- Chọn chủ đề --</option>
                            <option value="course">Tư vấn khóa học</option>
                            <option value="tech">Hỗ trợ kỹ thuật</option>
                            <option value="payment">Thanh toán & hóa đơn</option>
                            <option value="partner">Hợp tác kinh doanh</option>
                            <option value="feedback">Góp ý & Phản hồi</option>
                            <option value="other">Khác</option>
                        </select>
                    </div>

                    <!-- Nội dung -->
                    <div>
                        <label class="block text-sm font-bold text-gray-700 mb-2">
                            Nội dung tin nhắn <span class="text-red-500">*</span>
                        </label>
                        <textarea rows="6" placeholder="Nhập nội dung bạn muốn gửi..." required
                                  class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-blue-100 outline-none transition text-sm resize-none"></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="w-full bg-primary hover:bg-blue-700 text-white font-bold py-4 rounded-xl shadow-lg shadow-blue-500/30 transition transform hover:-translate-y-1 flex items-center justify-center gap-2">
                        <i class="fa-solid fa-paper-plane"></i>
                        <span>Gửi tin nhắn</span>
                    </button>

                    <p class="text-xs text-gray-400 text-center">
                        Bằng cách gửi tin nhắn, bạn đồng ý với
                        <a href="#" class="text-primary hover:underline">Chính sách bảo mật</a> của chúng tôi.
                    </p>
                </form>
            </div>
        </div>

    </div>
</section>

