@{
    ViewData["Title"] = "Về chúng tôi";
}

<div class=" text-gray-900">

    @* --- HERO SECTION ĐỒNG BỘ --- *@
    <section class="relative bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-600 text-white py-20 overflow-hidden">
        @* Họa tiết khối vuông chìm *@
        <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>

        @* Hiệu ứng mờ ảo (Blobs) *@
        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-96 h-96 bg-white opacity-10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-80 h-80 bg-blue-400 opacity-20 rounded-full blur-3xl"></div>

        <div class="container mx-auto px-4 relative z-10 text-center">
            <div class="max-w-4xl mx-auto">
                <span class="inline-block bg-white/20 backdrop-blur-sm text-white text-xs font-bold px-4 py-2 rounded-full mb-6 border border-white/30 tracking-widest uppercase">
                    <i class="fa-solid fa-shapes mr-1"></i> Về ToanHocHay
                </span>

                @* Cỡ chữ md:text-6xl đồng bộ với yêu cầu của bạn *@
                <h1 class="text-4xl md:text-6xl font-black mb-8 leading-tight tracking-tight">
                    Khơi nguồn cảm hứng <br />
                    <span class="text-yellow-300">Toán học công nghệ</span>
                </h1>

                <p class="text-lg md:text-xl text-blue-100 max-w-2xl mx-auto leading-relaxed mb-12">
                    Không chỉ là giải toán, chúng tôi xây dựng tư duy. Kết hợp giáo dục chuẩn mực và công nghệ AI để cá nhân hóa lộ trình cho từng học sinh.
                </p>

                @* Thống kê nhanh
                <div class="inline-flex flex-wrap justify-center gap-8 md:gap-24 border-t border-white/20 pt-10">
                    <div class="text-center">
                        <div class="text-3xl font-black text-white">50.000+</div>
                        <div class="text-sm font-semibold text-blue-200 mt-1">Câu hỏi luyện tập</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-black text-white">10TB+</div>
                        <div class="text-sm font-semibold text-blue-200 mt-1">Dữ liệu học tập</div>
                    </div>
                    <div class="text-center">
                        <div class="text-3xl font-black text-white">Top 10</div>
                        <div class="text-sm font-semibold text-blue-200 mt-1">Công nghệ EdTech</div>
                    </div>
                </div> *@
            </div>
        </div>
    </section>

    @* --- PHẦN SỨ MỆNH --- *@
    <section class="py-24 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row items-center gap-16 mb-24">
                <div class="flex-1 order-2 lg:order-1">
                    <div class="relative rounded-[2.5rem] overflow-hidden shadow-2xl border-8 border-white">
                        <div class="bg-gradient-to-br from-blue-600 to-blue-800 h-[450px] flex items-center justify-center relative overflow-hidden group">
                            <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-20"></div>
                            <i class="fa-solid fa-rocket text-9xl text-white/10 transform group-hover:scale-110 transition duration-700"></i>

                            <div class="absolute bottom-8 left-8 right-8 bg-white/95 backdrop-blur-md p-8 rounded-3xl shadow-xl">
                                <div class="flex items-center gap-5">
                                    <div class="w-14 h-14 rounded-2xl bg-blue-100 flex items-center justify-center text-blue-600 text-2xl font-bold"><i class="fa-solid fa-check"></i></div>
                                    <div>
                                        <p class="text-sm text-gray-500 font-bold uppercase tracking-wider">Mục tiêu</p>
                                        <p class="text-xl font-black text-gray-900">Cá nhân hóa 100%</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex-1 order-1 lg:order-2">
                    <h2 class="text-4xl font-black text-gray-900 mb-8 leading-tight">Sứ mệnh kiến tạo tri thức</h2>
                    <p class="text-gray-600 mb-8 text-xl leading-relaxed">
                        <span class="font-bold text-blue-600">ToanHocHay</span> tin rằng mỗi học sinh đều có thể học tốt Toán nếu được dẫn dắt đúng cách.
                        Chúng tôi tập trung xây dựng một môi trường học tập giúp học sinh <span class="font-bold text-gray-900">hiểu sâu thay vì học vẹt</span>,
                        học đúng năng lực cá nhân và nhìn thấy sự tiến bộ của chính mình qua từng chặng học tập – từ đó hình thành sự tự tin và hứng thú lâu dài với môn Toán.
                    </p>
                    <ul class="space-y-5">
                        <li class="flex items-center gap-4 text-gray-700 font-bold text-lg">
                            <i class="fa-solid fa-circle-check text-blue-600 text-2xl"></i>
                            <span>Phương pháp giảng dạy hiện đại, trực quan.</span>
                        </li>
                        <li class="flex items-center gap-4 text-gray-700 font-bold text-lg">
                            <i class="fa-solid fa-circle-check text-blue-600 text-2xl"></i>
                            <span>Công nghệ AI theo sát tiến độ từng ngày.</span>
                        </li>
                    </ul>
                </div>
            </div>

            @* --- GIÁ TRỊ CỐT LÕI --- *@
            <div class="text-center mb-16">
                <h2 class="text-4xl font-black text-gray-900">Giá trị cốt lõi</h2>
            </div>
            @* Chỉnh sửa grid-cols-3 thành lg:grid-cols-4 để chứa 4 thẻ *@
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                @* 1. Tận tâm *@
                <div class="bg-white p-8 rounded-[2rem] shadow-sm border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition duration-300 flex flex-col">
                    <div class="w-14 h-14 bg-blue-50 rounded-2xl flex items-center justify-center text-blue-600 text-2xl mb-6">
                        <i class="fa-solid fa-heart"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-4">Tận tâm</h3>
                    <p class="text-gray-600 text-sm leading-relaxed">
                        Mỗi bài học, mỗi bài tập đều được thiết kế dựa trên khó khăn thực tế của học sinh cấp 2. Chúng tôi ưu tiên cách giải dễ hiểu, trình bày rõ ràng, không gây áp lực hay so sánh.
                    </p>
                </div>

                @* 2. Công nghệ *@
                <div class="bg-white p-8 rounded-[2rem] shadow-sm border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition duration-300 flex flex-col">
                    <div class="w-14 h-14 bg-indigo-50 rounded-2xl flex items-center justify-center text-indigo-600 text-2xl mb-6">
                        <i class="fa-solid fa-microchip"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-4">Công nghệ</h3>
                    <p class="text-gray-600 text-sm leading-relaxed">
                        Toán Học Hay sử dụng công nghệ để hỗ trợ việc học: gợi ý bài học phù hợp, giải thích từng bước khi làm sai và theo sát tiến độ học tập của từng học sinh, không làm phức tạp trải nghiệm.
                    </p>
                </div>

                @* 3. Chất lượng *@
                <div class="bg-white p-8 rounded-[2rem] shadow-sm border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition duration-300 flex flex-col">
                    <div class="w-14 h-14 bg-amber-50 rounded-2xl flex items-center justify-center text-amber-500 text-2xl mb-6">
                        <i class="fa-solid fa-star"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-4">Chất lượng</h3>
                    <p class="text-gray-600 text-sm leading-relaxed">
                        Nội dung học tập được xây dựng bám sát chương trình THCS, chọn lọc kỹ lưỡng, ưu tiên hiểu bản chất thay vì học thuộc công thức. Chúng tôi không chạy theo số lượng bài, mà tập trung vào hiệu quả học thật sự.
                    </p>
                </div>

                @* 4. ĐỒNG HÀNH (THÊM MỚI VÀO ĐÂY) *@
                <div class="bg-white p-8 rounded-[2rem] shadow-sm border border-gray-100 hover:shadow-xl hover:-translate-y-2 transition duration-300 flex flex-col border-blue-100 bg-gradient-to-b from-white to-blue-50/30">
                    <div class="w-14 h-14 bg-green-50 rounded-2xl flex items-center justify-center text-green-600 text-2xl mb-6">
                        <i class="fa-solid fa-handshake-angle"></i>
                    </div>
                    <h3 class="text-xl font-black text-gray-900 mb-4">Đồng hành</h3>
                    <p class="text-gray-600 text-sm leading-relaxed">
                        Toán Học Hay kết nối học sinh – phụ huynh – giáo viên trong cùng một hành trình, giúp học sinh học đúng hướng, phụ huynh theo sát tiến độ và giáo viên có thêm công cụ hỗ trợ giảng dạy hiệu quả, từ đó tạo nên kết quả học tập bền vững.
                    </p>
                </div>
            </div>
    </section>

    @* --- ĐỘI NGŨ PHÁT TRIỂN --- *@
    <section class="py-24 bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center mb-20">
                <h2 class="text-4xl font-black text-gray-900 mb-6">Đội ngũ phát triển</h2>
                <p class="text-xl text-gray-500">Sự kết hợp giữa giáo dục, công nghệ và trải nghiệm người dùng</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                @{
                    var teamMembers = new[] {
                                new {
                                Role = "Ban Chuyên môn",
                                Title = "Cố vấn Giáo dục",
                                Img = "/images/EXE/Hanh.png",
                                Desc = @"Định hướng nội dung học tập bám sát chương trình, phù hợp tâm lý học sinh lớp 6 và đảm bảo giá trị sư phạm trong từng bài giảng."
                                },
                                new {
                                Role = "Ban Công nghệ",
                                Title = "Kỹ sư Phần mềm",
                                Img = "/images/EXE/Nguyen.png",
                                Desc = @"Xây dựng và vận hành nền tảng ổn định, tối ưu giao diện, trải nghiệm học tập trên nhiều thiết bị."
                                },
                                new {
                                Role = "Ban R&D",
                                Title = "Chuyên gia AI",
                                Img = "/images/EXE/Dat.png",
                                Desc = @"Phát triển hệ thống theo dõi tiến độ và gợi ý học tập phù hợp với năng lực của từng học sinh."
                                },
                                new {
                                Role = "Ban Vận hành",
                                Title = "Chăm sóc khách hàng",
                                Img = "/images/EXE/Quan.png",
                                Desc = @"Lắng nghe, hỗ trợ và đồng hành cùng phụ huynh - học sinh trong suốt quá trình sử dụng nền tảng."
                                }
                                };
                }

                @foreach (var member in teamMembers)
                {
                    <div class="group relative overflow-hidden rounded-[2rem] shadow-lg bg-gray-100">
                        <div class="aspect-[3/4] relative">
                            @* CHỖ QUAN TRỌNG: Thay i bằng img *@
                            <img src="@member.Img"
                                 alt="@member.Title"
                                 class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-110"
                                 onerror="this.src='https://via.placeholder.com/300x400?text=Loi+Anh'" />

                            @* Lớp phủ Gradient để làm nổi bật chữ trắng *@
                            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/20 to-transparent z-10"></div>

                            <div class="absolute bottom-0 left-0 right-0 p-8 z-20 text-white transform translate-y-4 group-hover:translate-y-0 transition duration-300">
                                <p class="text-[10px] font-black uppercase tracking-widest mb-2 text-blue-400">@member.Role</p>
                                <h4 class="text-2xl font-black mb-2">@member.Title</h4>

                                @* Nội dung mô tả hiện lên khi hover *@
                                <p class="text-sm text-gray-300 opacity-0 group-hover:opacity-100 transition duration-500 leading-relaxed">
                                    @member.Desc
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    @* --- CTA SECTION --- *@
    <section class="py-24">
        <div class="container mx-auto px-4">
            <div class="bg-[#2563EB] rounded-[3rem] p-12 md:p-24 text-center text-white relative overflow-hidden shadow-2xl">
                <div class="absolute top-0 left-0 w-80 h-80 bg-white opacity-10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
                <div class="absolute bottom-0 right-0 w-80 h-80 bg-purple-400 opacity-20 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>

                <div class="relative z-10 max-w-3xl mx-auto">
                    <h2 class="text-4xl md:text-6xl font-black mb-8 leading-tight">Đừng để môn Toán cản bước tương lai</h2>
                    <p class="text-xl text-blue-100 mb-12 opacity-90 leading-relaxed">
                        Hãy cùng con bắt đầu hành trình chinh phục những con số một cách đầy cảm hứng ngay hôm nay.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-6 justify-center">
                        <a href="/Account/Register" class="inline-flex items-center justify-center px-10 py-5 text-lg font-black text-blue-700 bg-white rounded-full hover:bg-gray-100 transition transform hover:-translate-y-1 shadow-xl">
                            Đăng ký học thử miễn phí
                        </a>
                        <a href="/Course" class="inline-flex items-center justify-center px-10 py-5 text-lg font-black text-white border-2 border-white/30 rounded-full hover:bg-white/10 transition">
                            Xem lộ trình mẫu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>