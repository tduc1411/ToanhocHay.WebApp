@using ToanHocHay.WebApp.Models.DTOs
@model UserDto
@{
    Layout = null;
    var user = Model ?? new UserDto { FullName = "Học sinh", Email = "" };
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ sơ cá nhân - ToanHocHay</title>
    <link rel="icon" type="image/x-icon" href="/logo_header.ico">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }

        .fade-in {
            animation: fadeIn 0.3s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(5px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .nav-item.active {
            background-color: #EFF6FF;
            color: #2563EB;
            border-left: 4px solid #2563EB;
            font-weight: 700;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

    <header class="h-16 bg-white shadow-sm flex items-center justify-between px-4 lg:px-8 shrink-0 sticky top-0 z-20">
        <div class="flex items-center gap-2 cursor-pointer" onclick="window.location.href='/'">
            <img src="/logo_header.ico" alt="Logo" class="w-8 h-8 object-contain">
            <span class="text-xl font-bold text-primary">ToanHocHay</span>
        </div>

        <div class="flex items-center gap-4">
            <div class="h-8 w-[1px] bg-gray-200 hidden md:block"></div>
            <div class="flex items-center gap-3">
                <span class="text-gray-600 font-semibold hidden md:block">@user.FullName</span>
                <img id="header-avatar-small"
                     src="https://api.dicebear.com/7.x/fun-emoji/svg?seed=@user.FullName"
                     class="w-9 h-9 rounded-full border border-gray-200 bg-blue-50">
            </div>
        </div>
    </header>

    <main class="flex-1 container mx-auto p-4 md:p-8 max-w-5xl">

        <div class="mb-6 flex items-center justify-between text-sm text-gray-500">
            <div class="flex items-center">
                <a href="/" class="hover:text-primary"><i class="fa-solid fa-house mr-1"></i>Trang chủ</a>
                <span class="mx-2">/</span>
                <span class="text-gray-800 font-bold">Hồ sơ cá nhân</span>
            </div>
        </div>

        <div class="flex flex-col md:flex-row gap-6">

            <aside class="w-full md:w-64 bg-white rounded-xl shadow-sm h-fit overflow-hidden border border-gray-100">
                <div class="p-6 text-center border-b border-gray-100 bg-gradient-to-b from-blue-50/50 to-white">
                    <div class="relative w-24 h-24 mx-auto mb-3 group">
                        <img id="current-avatar"
                             src="https://api.dicebear.com/7.x/fun-emoji/svg?seed=@user.FullName"
                             class="w-full h-full rounded-full border-4 border-white shadow-md">
                        <button onclick="openAvatarModal()" class="absolute inset-0 bg-black/40 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-200">
                            <i class="fa-solid fa-sync text-white text-xl"></i>
                        </button>
                    </div>
                    <h2 class="text-lg font-bold text-gray-800">@user.FullName</h2>
                    <p class="text-xs text-blue-600 font-bold uppercase mt-1">Học sinh</p>
                </div>

                <nav class="p-2">
                    <ul class="space-y-1">
                        <li>
                            <button onclick="switchTab('general')" id="nav-general" class="nav-item active w-full text-left px-4 py-3 rounded-lg text-gray-600 transition flex items-center gap-3">
                                <i class="fa-solid fa-circle-user w-5"></i> Thông tin chung
                            </button>
                        </li>
                        <li>
                            <button onclick="switchTab('security')" id="nav-security" class="nav-item w-full text-left px-4 py-3 rounded-lg text-gray-600 transition flex items-center gap-3">
                                <i class="fa-solid fa-key w-5"></i> Bảo mật
                            </button>
                        </li>
                    </ul>
                    <div class="border-t border-gray-100 mt-2 pt-2">
                        <button onclick="location.href='/Account/Logout'" class="w-full text-left px-4 py-3 rounded-lg text-red-500 hover:bg-red-50 transition flex items-center gap-3">
                            <i class="fa-solid fa-power-off w-5"></i> Đăng xuất
                        </button>
                    </div>
                </nav>
            </aside>

            <div class="flex-1 bg-white rounded-xl shadow-sm p-6 md:p-8 min-h-[400px] border border-gray-100">

                <div id="tab-general" class="fade-in block">
                    <h3 class="text-xl font-bold text-gray-800 mb-6">Thông tin cá nhân</h3>
                    <form id="form-update-profile" class="space-y-6">
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Họ và tên</label>
                            <div class="relative">
                                <i class="fa-regular fa-user absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input type="text" name="FullName" value="@user.FullName" class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-100 outline-none transition">
                            </div>
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Email tài khoản</label>
                            <div class="relative">
                                <i class="fa-regular fa-envelope absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                                <input type="email" value="@user.Email" disabled class="w-full pl-12 pr-4 py-3 border border-gray-200 bg-gray-50 text-gray-400 rounded-xl cursor-not-allowed">
                            </div>
                        </div>
                        <div class="pt-4 border-t border-gray-100 flex justify-end">
                            @* Thay bg-primary bằng bg-blue-500 để chắc chắn có màu nền *@
                            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-10 rounded-xl transition shadow-lg shadow-blue-100 flex items-center gap-2 border-none outline-none">
                                <i class="fa-solid fa-check"></i>
                                <span>Cập nhật ngay</span>
                            </button>
                        </div>
                    </form>
                </div>

                <div id="tab-security" class="hidden fade-in">
                    <h3 class="text-xl font-bold text-gray-800 mb-6">Đổi mật khẩu</h3>
                    <form id="form-change-password" class="space-y-5 max-w-md">
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Mật khẩu cũ</label>
                            <input type="password" name="OldPassword" class="w-full px-4 py-3 border border-gray-300 rounded-xl outline-none focus:ring-2 focus:ring-blue-100">
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Mật khẩu mới</label>
                            <input type="password" name="NewPassword" class="w-full px-4 py-3 border border-gray-300 rounded-xl outline-none focus:ring-2 focus:ring-blue-100">
                        </div>
                        <div>
                            <label class="block text-gray-700 text-sm font-bold mb-2">Xác nhận mật khẩu</label>
                            <input type="password" name="ConfirmPassword" class="w-full px-4 py-3 border border-gray-300 rounded-xl outline-none focus:ring-2 focus:ring-blue-100">
                        </div>
                        <button type="submit" class="w-full bg-slate-800 hover:bg-black text-white font-bold py-3 rounded-xl transition">Xác nhận đổi</button>
                    </form>
                </div>

            </div>
        </div>
    </main>

    <footer class="py-6 text-center text-gray-400 text-sm">
        &copy; 2026 ToanHocHay - Nền tảng học toán thông minh
    </footer>
    <script>
        // Đoạn này chạy ngay lập tức khi trang vừa load để giữ đúng Avatar đã chọn
                document.addEventListener('DOMContentLoaded', () => {
            const savedStyle = localStorage.getItem('user_avatar_style');
            if (savedStyle) {
                const userName = "@user.FullName";
                const newUrl = `https://api.dicebear.com/7.x/${savedStyle}/svg?seed=${userName}`;

                // Đổi ảnh to
                const bigImg = document.getElementById('current-avatar');
                if(bigImg) bigImg.src = newUrl;

                // Đổi ảnh nhỏ trên Header
                const smallImg = document.getElementById('header-avatar-small');
                if(smallImg) smallImg.src = newUrl;
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 1. Hàm chuyển Tab (Giữ nguyên)
        function switchTab(tabName) {
            document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));
            const navBtn = document.getElementById(`nav-${tabName}`);
            if(navBtn) navBtn.classList.add('active');

            ['general', 'security'].forEach(t => {
                const content = document.getElementById(`tab-${t}`);
                if(content) content.classList.add('hidden');
            });
            const activeContent = document.getElementById(`tab-${tabName}`);
            if(activeContent) activeContent.classList.remove('hidden');
        }

        // 2. Xử lý CẬP NHẬT THÔNG TIN (Tab 1)
        const updateForm = document.getElementById('form-update-profile');
        if(updateForm) {
            updateForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(updateForm);
                const data = {
                    fullName: formData.get('FullName'),
                    schoolName: "",
                    grade: 0
                };

                try {
                    const response = await fetch('/Student/UpdateProfile', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });

                    const result = await response.json();
                    if (response.ok) {
                        Swal.fire('Thành công!', 'Đã cập nhật tên mới.', 'success').then(() => location.reload());
                    } else {
                        Swal.fire('Thất bại', result.message || 'Lỗi cập nhật', 'error');
                    }
                } catch (error) {
                    Swal.fire('Lỗi', 'Không thể kết nối đến máy chủ', 'error');
                }
            });
        }

        // 3. Xử lý ĐỔI MẬT KHẨU (Tab 2)
        const passwordForm = document.getElementById('form-change-password');
        if(passwordForm) {
            passwordForm.addEventListener('submit', async (e) => {
                e.preventDefault();
                const formData = new FormData(passwordForm);
                const data = {
                    oldPassword: formData.get('OldPassword'),
                    newPassword: formData.get('NewPassword'),
                    confirmPassword: formData.get('ConfirmPassword')
                };

                if(data.newPassword !== data.confirmPassword) {
                    Swal.fire('Lỗi', 'Mật khẩu xác nhận không khớp', 'warning');
                    return;
                }

                try {
                    const response = await fetch('/Student/ChangePassword', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    const result = await response.json();
                    if (result.success) {
                        Swal.fire('Thành công!', 'Mật khẩu đã được thay đổi.', 'success');
                        passwordForm.reset();
                    } else {
                        Swal.fire('Thất bại', result.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Lỗi', 'Có lỗi xảy ra', 'error');
                }
            });
        }
                async function openAvatarModal() {
            const { value: avatar } = await Swal.fire({
                title: 'Chọn phong cách Avatar',
                input: 'select',
                inputOptions: {
                    'adventurer': 'Phiêu lưu',
                    'bottts': 'Người máy',
                    'avataaars': 'Đáng yêu',
                    'big-smile': 'Cười lớn',
                    'pixel-art': 'Cổ điển (Pixel)'
                },
                inputPlaceholder: 'Chọn một phong cách',
                showCancelButton: true,
                confirmButtonText: 'Đổi ngay',
                cancelButtonText: 'Hủy',
                confirmButtonColor: '#3B82F6'
            });

            if (avatar) {
                // 0. Tạo URL mới dựa trên phong cách đã chọn
                    const style = avatar.toLowerCase();
        const userName = "@user.FullName"; // Dùng tên làm seed đồng nhất
        const newUrl = `https://api.dicebear.com/7.x/${style}/svg?seed=${userName}`;

                // 1. Cập nhật ảnh to tại trang Profile
                    const currentAvatarImg = document.getElementById('current-avatar');
        if (currentAvatarImg) currentAvatarImg.src = newUrl;

        // 2. CẬP NHẬT ẢNH NHỎ TRÊN HEADER (Dòng mới thêm đây An ơi)
        const smallHeaderImg = document.getElementById('header-avatar-small');
        if (smallHeaderImg) smallHeaderImg.src = newUrl;

                // 3. ĐỒNG BỘ LÊN HEADER (Dòng quan trọng đây!)
                // Gọi hàm updateGlobalAvatar đã viết ở file _Layout
                if (typeof updateGlobalAvatar === "function") {
                    updateGlobalAvatar(style, userName);
                }

                // 4. LƯU LẠI LỰA CHỌN VÀO TRÌNH DUYỆT
                localStorage.setItem('user_avatar_style', style);

                // 5. Gửi yêu cầu lưu vào Database (Hàm saveAvatarSeed bạn đã có)
                saveAvatarSeed(style);

                Swal.fire('Thành công!', 'Đã cập nhật phong cách ảnh đại diện.', 'success');
            }
        }

        async function saveAvatarSeed(style) {
            try {
                const response = await fetch('/Student/UpdateAvatar', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ avatarStyle: style })
                });
                if (response.ok) {
                    Swal.fire('Thành công!', 'Đã đổi phong cách ảnh đại diện.', 'success');
                }
            } catch (error) {
                console.error("Lỗi đổi avatar:", error);
            }
        }
    </script>
</body>
</html>