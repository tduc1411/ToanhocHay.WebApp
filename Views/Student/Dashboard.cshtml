@using ToanHocHay.WebApp.Models.DTOs
@model StudentDashboardDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Học sinh - ToanHocHay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: { colors: { primary: '#3B82F6', secondary: '#F97316' } }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">

    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="container mx-auto px-4 py-3 flex justify-between items-center">
            <a href="/" class="flex items-center gap-3 hover:opacity-80 transition cursor-pointer">
                <img src="/logo_header.ico" alt="Logo" class="w-8 h-8 object-contain" />
                <span class="text-xl font-black tracking-tight text-primary">ToanHocHay</span>
            </a>
            <div class="flex items-center gap-4">
                <span class="text-sm font-bold text-gray-600 hidden md:inline">Học sinh: @User.Identity?.Name</span>
                <button type="button" onclick="openAvatarModal()" class="hover:scale-110 transition">
                    <img id="header-avatar"
                         src="https://api.dicebear.com/7.x/fun-emoji/svg?seed=@User.Identity?.Name"
                         class="w-9 h-9 rounded-full border bg-blue-50 shadow-sm">
                </button>
            </div>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8 max-w-6xl">

        <section class="mb-8 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:border-blue-300 transition">
                    <div class="w-10 h-10 bg-yellow-100 text-yellow-600 rounded-lg flex items-center justify-center text-xl mb-3">
                        <i class="fa-solid fa-medal"></i>
                    </div>
                    <p class="text-gray-500 text-xs font-bold uppercase mb-1">Điểm Trung Bình</p>
                    <h3 class="text-3xl font-extrabold text-gray-800">@Model.AverageScore.ToString("0.0")</h3>
                </div>

                <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:border-green-300 transition">
                    <div class="w-10 h-10 bg-green-100 text-green-600 rounded-lg flex items-center justify-center text-xl mb-3">
                        <i class="fa-solid fa-circle-check"></i>
                    </div>
                    <p class="text-gray-500 text-xs font-bold uppercase mb-1">Chương Hoàn Thành</p>
                    <h3 class="text-3xl font-extrabold text-gray-800">@Model.CompletedChapters</h3>
                </div>

                <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:border-blue-300 transition">
                    <div class="w-10 h-10 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center text-xl mb-3">
                        <i class="fa-solid fa-book-open"></i>
                    </div>
                    <p class="text-gray-500 text-xs font-bold uppercase mb-1">Tổng Lần Làm Bài</p>
                    <h3 class="text-3xl font-extrabold text-gray-800">@Model.TotalAttempts</h3>
                </div>
            </div>

            <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
                <div class="flex items-center gap-2 mb-6">
                    <div class="w-6 h-6 rounded-full border-2 border-purple-500 flex items-center justify-center">
                        <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                    </div>
                    <h3 class="font-bold text-gray-800 text-lg">Phân tích điểm theo Chương</h3>
                </div>
                <div class="h-80 w-full">
                    @if (Model.ChartData != null && Model.ChartData.Any())
                    {
                        <canvas id="scoreChart"></canvas>
                    }
                    else
                    {
                        <div class="h-full flex flex-col items-center justify-center text-gray-400">
                            <i class="fa-solid fa-chart-line text-4xl mb-2"></i>
                            <p>Chưa có dữ liệu bài làm để phân tích</p>
                        </div>
                    }
                </div>
            </div>
        </section>

        <section class="mb-10">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800 border-l-4 border-primary pl-3">Chương trình học</h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @if (Model.Chapters != null && Model.Chapters.Any())
                {
                    foreach (var chapter in Model.Chapters)
                    {
                        <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition">
                            <div class="flex justify-between items-start mb-3">
                                <span class="text-xs font-bold px-2 py-1 rounded @(chapter.ProgressPercentage == 100 ? "bg-green-100 text-green-700" : "bg-blue-100 text-blue-700")">
                                    @(chapter.ProgressPercentage == 100 ? "Đã hoàn thành" : "Đang học")
                                </span>
                                <span class="text-blue-600 font-bold text-sm">@chapter.ProgressPercentage%</span>
                            </div>
                            <h3 class="font-bold text-lg text-gray-800 mb-2">@chapter.ChapterName</h3>
                            <p class="text-xs text-gray-500 mb-4">@chapter.TotalLessons Bài học</p>
                            <div class="w-full bg-gray-200 rounded-full h-1.5 mb-4">
                                <div class="bg-blue-600 h-1.5 rounded-full" style="width: @chapter.ProgressPercentage%"></div>
                            </div>
                            <div class="flex gap-2">
                                <a href="/Course/Learning/@chapter.ChapterId" class="flex-1 bg-primary text-white text-sm font-bold py-2 rounded-lg hover:bg-blue-600 text-center">Tiếp tục</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-span-full py-10 text-center text-gray-400 bg-white rounded-xl border border-dashed">
                        <p>Dữ liệu chương trình học đang được cập nhật...</p>
                    </div>
                }
            </div>
        </section>

        <section class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="p-5 border-b border-gray-100 flex flex-col md:flex-row justify-between items-center gap-4">
                <h2 class="text-lg font-bold text-gray-800"><i class="fa-solid fa-clock-rotate-left mr-2 text-primary"></i>Lịch sử kiểm tra</h2>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-gray-600">
                    <thead class="bg-gray-50 text-gray-700 font-bold uppercase text-xs">
                        <tr>
                            <th class="px-6 py-3">Tên bài kiểm tra</th>
                            <th class="px-6 py-3">Ngày làm</th>
                            <th class="px-6 py-3 text-center">Điểm số</th>
                            <th class="px-6 py-3 text-right">Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        @if (Model.RecentAttempts != null && Model.RecentAttempts.Any())
                        {
                            foreach (var item in Model.RecentAttempts)
                            {
                                <tr class="hover:bg-blue-50/50 transition">
                                    <td class="px-6 py-4 font-semibold text-gray-800">@item.ExerciseName</td>
                                    <td class="px-6 py-4">@item.StartTime.ToString("dd/MM/yyyy")</td>
                                    <td class="px-6 py-4 text-center">
                                        <span class="px-2 py-1 rounded font-bold @(item.Score >= 8 ? "bg-green-100 text-green-700" : "bg-yellow-100 text-yellow-700")">
                                            @item.Score.ToString("0.0")
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <a href="/Exam/Review/@item.AttemptId" class="text-primary font-bold underline">Xem</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="px-6 py-10 text-center text-gray-400 italic">
                                    Bạn chưa thực hiện bài kiểm tra nào.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </section>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function openAvatarModal() {
            const { value: style } = await Swal.fire({
                title: 'Chọn phong cách Dashboard',
                input: 'select',
                inputOptions: {
                    'fun-emoji': 'Vui nhộn (Emoji)',
                    'adventurer': 'Nhà thám hiểm',
                    'avataaars': 'Hoạt hình',
                    'bottts': 'Người máy',
                    'pixel-art': 'Cổ điển'
                },
                inputPlaceholder: 'Thay đổi kiểu Avatar...',
                showCancelButton: true,
                confirmButtonColor: '#3B82F6'
            });

            if (style) {
                // Đổi ảnh trên Header Dashboard ngay lập tức
                const newUrl = `https://api.dicebear.com/7.x/${style}/svg?seed=@User.Identity?.Name`;
                document.getElementById('header-avatar').src = newUrl;

                Swal.fire('Đã đổi!', 'Giao diện Dashboard của bạn trông mới mẻ hơn rồi đấy.', 'success');
            }
        }
    </script>
</body>
</html>