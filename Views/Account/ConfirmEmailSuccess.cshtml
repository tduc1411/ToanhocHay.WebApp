@{
    ViewData["Title"] = "Xác nhận email thành công";
}

<div class="container text-center mt-5">
    <div class="card shadow p-4">
        <h1 class="text-success">✅ Xác nhận thành công</h1>

        <p class="mt-3">
            Email của bạn đã được xác nhận thành công.<br />
            Bạn có thể đăng nhập và sử dụng hệ thống ngay bây giờ.
        </p>

        <a asp-controller="Account"
           asp-action="Login"
           class="btn btn-success mt-3">
            Đăng nhập
        </a>
    </div>
</div>
