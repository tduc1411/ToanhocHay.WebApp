@{
    ViewData["Title"] = "Xác nhận email thất bại";
}

<div class="container d-flex justify-content-center align-items-center py-5">
    <div class="card shadow-lg border-0 rounded-4 p-4 text-center">
        <div class="mb-3">
            <i class="fa-solid fa-circle-xmark text-danger" style="font-size: 64px;"></i>
        </div>

        <h2 class="fw-bold text-danger mb-3">
            Xác nhận thất bại
        </h2>

        <p class="text-muted mb-4">
            Liên kết xác nhận không hợp lệ hoặc đã hết hạn.<br />
            Vui lòng yêu cầu gửi lại email xác nhận.
        </p>

        <a asp-controller="Account"
           asp-action="ResendConfirmationEmail"
           class="btn btn-danger btn-lg rounded-pill px-4">
            <i class="fa-solid fa-envelope-circle-check me-2"></i>
            Gửi lại email xác nhận
        </a>

        <div class="mt-3">
            <a asp-controller="Account"
               asp-action="Login"
               class="text-decoration-none text-secondary small">
                ← Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>
