@{
    Layout = null;
    var initialMode = ViewBag.Mode as string ?? "login";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - ToanHocHay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Nunito', sans-serif; }

        /* Animation cho nền - Đã sửa lỗi @@keyframes */
        @@keyframes blob {
            0% { transform: translate(0px, 0px) scale(1); }
            33% { transform: translate(30px, -50px) scale(1.1); }
            66% { transform: translate(-20px, 20px) scale(0.9); }
            100% { transform: translate(0px, 0px) scale(1); }
        }
        .animate-blob {
            animation: blob 7s infinite;
        }
        .animation-delay-2000 {
            animation-delay: 2s;
        }
        .animation-delay-4000 {
            animation-delay: 4s;
        }

        .fade-in {
            animation: fadeIn 0.3s ease-in-out;
        }
        @@keyframes fadeIn { /* Sửa cả ở đây nữa */
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: { colors: { primary: '#3B82F6', secondary: '#F97316' } }
            }
        }
    </script>
</head>
<body class="bg-blue-50 min-h-screen flex items-center justify-center p-4 relative overflow-hidden">

    <!-- Background Shapes -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
    <div class="absolute top-0 right-0 w-72 h-72 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>

    <div class="bg-white rounded-2xl shadow-2xl w-full max-w-4xl flex overflow-hidden z-10 min-h-[600px] fade-in">

        <!-- Left Side -->
        <div class="hidden md:flex md:w-1/2 bg-gradient-to-br from-blue-600 to-blue-800 text-white p-12 flex-col justify-between">
            <div>
                <a href="/" class="flex items-center gap-2 mb-2 hover:text-yellow-300 transition">
                    <i class="fa-solid fa-arrow-left"></i> Về trang chủ
                </a>
                <div class="flex items-center gap-2 mt-4">
                    <i class="fa-solid fa-shapes text-3xl text-yellow-400"></i>
                    <h1 class="text-3xl font-extrabold tracking-wide">ToanHocHay</h1>
                </div>
            </div>
            <div class="text-center">
                <img src="https://img.freepik.com/free-vector/mathematics-concept-illustration_114360-3972.jpg" class="w-3/4 mx-auto mb-6 rounded-lg shadow-lg opacity-90 mix-blend-hard-light border-4 border-white/20">
                <p class="italic text-sm text-blue-200">"Học mà chơi, chơi mà học"</p>
            </div>
        </div>

        <!-- Right Side: Forms Area -->
        <div class="w-full md:w-1/2 p-8 md:p-12 relative flex flex-col justify-center" id="form-area">
            <!-- Nội dung sẽ được JS điền vào đây -->
        </div>
    </div>

    <!-- JAVASCRIPT LOGIC -->
    <script>
        // --- TEMPLATES ---

        // 1. Template Đăng Nhập
        const loginTemplate = `
            <div class="fade-in w-full max-w-sm mx-auto">
                <h2 class="text-3xl font-bold text-gray-800 mb-2">Xin chào! 👋</h2>
                <p class="text-gray-500 mb-8">Đăng nhập để tiếp tục học tập.</p>

                <form action="/Account/Login" method="POST">
                    <div class="mb-4">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Email</label>
                        <input name="email" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-primary focus:ring-1" type="text" placeholder="email@example.com" required>
                    </div>
                    <div class="mb-6">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Mật khẩu</label>
                        <input name="password" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:border-primary focus:ring-1" type="password" placeholder="••••••••" required>
                    </div>
                    <button type="submit" class="w-full bg-primary hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg shadow-lg transition transform hover:-translate-y-1">
                        Đăng nhập
                    </button>
                </form>

                <div class="mt-6 text-center">
                    <p class="text-gray-600">Chưa có tài khoản? <a href="javascript:void(0)" onclick="renderRoleSelection()" class="text-primary font-bold hover:underline">Đăng ký ngay</a></p>
                </div>
            </div>
        `;

        // 2. Template Chọn Vai Trò
        const roleSelectionTemplate = `
            <div class="fade-in w-full text-center">
                <button onclick="renderLogin()" class="absolute top-4 left-4 text-gray-400 hover:text-gray-600"><i class="fa-solid fa-arrow-left mr-1"></i> Quay lại</button>
                <h2 class="text-2xl font-bold text-gray-800 mb-2 mt-8">Chọn vai trò</h2>
                <div class="space-y-4 mt-6">
                    <div onclick="renderRegister('student')" class="cursor-pointer border-2 border-gray-100 rounded-xl p-4 hover:border-primary hover:bg-blue-50 flex items-center shadow-sm">
                        <div class="bg-blue-100 text-primary w-12 h-12 rounded-full flex items-center justify-center text-xl"><i class="fa-solid fa-graduation-cap"></i></div>
                        <div class="ml-4 text-left"><h3 class="font-bold text-gray-800">Tôi là Học sinh</h3><p class="text-xs text-gray-500">Lớp 6-9, muốn học Toán hiệu quả.</p></div>
                    </div>
                    <div onclick="renderRegister('parent')" class="cursor-pointer border-2 border-gray-100 rounded-xl p-4 hover:border-secondary hover:bg-orange-50 flex items-center shadow-sm">
                        <div class="bg-orange-100 text-secondary w-12 h-12 rounded-full flex items-center justify-center text-xl"><i class="fa-solid fa-user-tie"></i></div>
                        <div class="ml-4 text-left"><h3 class="font-bold text-gray-800">Tôi là Phụ huynh</h3><p class="text-xs text-gray-500">Giám sát và đồng hành cùng con.</p></div>
                    </div>
                </div>
                <p class="text-center text-gray-600 mt-8">Đã có tài khoản? <a href="javascript:void(0)" onclick="renderLogin()" class="text-primary font-bold hover:underline">Đăng nhập</a></p>
            </div>
        `;

        // 3. Template Form Đăng Ký (Đã thêm name="" và action="")
        function getRegisterTemplate(role) {
            const isStudent = role === 'student';
            const roleName = isStudent ? 'Học sinh' : 'Phụ huynh';
            const btnClass = isStudent ? 'bg-primary hover:bg-blue-700' : 'bg-secondary hover:bg-orange-600';

            return `
                <div class="fade-in w-full max-w-sm mx-auto">
                    <button onclick="renderRoleSelection()" class="absolute top-4 left-4 text-gray-400 hover:text-gray-600"><i class="fa-solid fa-arrow-left mr-1"></i> Quay lại</button>
                    <div class="text-center mb-6 mt-6">
                        <h2 class="text-2xl font-bold text-gray-800">Đăng ký ${roleName}</h2>
                    </div>

                    <form action="/Account/Register" method="POST">
                        <input type="hidden" name="role" value="${role}">

                        <div class="mb-3">
                            <label class="block text-gray-700 text-sm font-bold mb-1">Họ và tên</label>
                            <input name="fullName" class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-primary" type="text" required>
                        </div>

                        <div class="mb-3">
                            <label class="block text-gray-700 text-sm font-bold mb-1">Email</label>
                            <input name="email" class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-primary" type="email" required>
                        </div>

                        <div class="mb-4">
                            <label class="block text-gray-700 text-sm font-bold mb-1">Mật khẩu</label>
                            <input name="password" class="w-full px-3 py-2 rounded-lg border border-gray-300 focus:outline-none focus:border-primary" type="password" required>
                        </div>

                        <button type="submit" class="w-full text-white font-bold py-3 px-4 rounded-lg shadow-md transition duration-300 ${btnClass}">
                            Tạo tài khoản
                        </button>
                    </form>
                </div>
            `;
        }

        // --- CONTROLLER ---
        const formArea = document.getElementById('form-area');
        const initialMode = "@initialMode"; 

        function renderLogin() { formArea.innerHTML = loginTemplate; }
        function renderRoleSelection() { formArea.innerHTML = roleSelectionTemplate; }
        function renderRegister(role) { formArea.innerHTML = getRegisterTemplate(role); }

        // Init
        if (initialMode === 'register') renderRoleSelection();
        else renderLogin();

    </script>
</body>
</html>