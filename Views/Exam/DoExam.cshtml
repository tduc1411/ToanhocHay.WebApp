@model ToanHocHay.WebApp.Models.DTOs.ExerciseDetailDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Làm bài thi - ToanHocHay</title>
    <link rel="icon" type="image/x-icon" href="/logo_header.ico">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }

        .custom-scroll::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scroll::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

        .option-card.selected {
            border-color: #2563EB;
            background-color: #EFF6FF;
            box-shadow: 0 0 0 1px #2563EB;
        }

        .option-label.selected {
            background-color: #2563EB;
            color: white;
            border-color: #2563EB;
        }

        .nav-btn.answered {
            background-color: #1E40AF !important;
            color: #FACC15 !important;
            border-color: #1E3A8A !important;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .nav-btn.active {
            border-color: #2563EB;
            background-color: #F1F5F9;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.3);
        }

        .question-page {
            display: none;
        }

            .question-page.active {
                display: block;
            }
    </style>
</head>
<body class="bg-[#E0E7FF] h-screen flex items-center justify-center p-4 md:p-6 overflow-hidden">
    <div class="w-full max-w-[1400px] h-[90vh] flex gap-6">

        <!-- Sidebar Navigation -->
        <aside class="w-80 bg-white rounded-2xl shadow-xl flex flex-col overflow-hidden border border-blue-100 shrink-0 hidden lg:flex">
            <div class="p-5 border-b border-blue-50 bg-blue-50/50">
                <h3 class="text-blue-800 font-bold text-lg text-center flex items-center justify-center gap-2">
                    <i class="fa-solid fa-table-cells text-blue-600"></i> Danh sách câu hỏi
                </h3>
            </div>
            <div class="p-6 flex-1 overflow-y-auto custom-scroll">
                <div class="grid grid-cols-2 gap-3 mb-6">
                    <div class="bg-green-50 p-3 rounded-xl border border-green-100 text-center">
                        <span class="block text-green-600 font-bold text-xl" id="answered-count">0</span>
                        <span class="text-xs text-green-700 font-bold uppercase tracking-tighter">Đã làm</span>
                    </div>
                    <div class="bg-slate-50 p-3 rounded-xl border border-slate-200 text-center">
                        <span class="block text-slate-500 font-bold text-xl" id="unanswered-count">@Model.Questions.Count</span>
                        <span class="text-xs text-slate-500 font-bold uppercase tracking-tighter">Chưa làm</span>
                    </div>
                </div>
                <div class="grid grid-cols-5 gap-2">
                    @for (int i = 0; i < Model.Questions.Count; i++)
                    {
                        <button id="nav-btn-@i" onclick="goToQuestion(@i)"
                                class="nav-btn w-full aspect-square flex items-center justify-center rounded-xl border-2 border-gray-100 text-gray-600 font-bold hover:border-blue-300 hover:bg-blue-50 transition shadow-sm">
                            @(i + 1)
                        </button>
                    }
                </div>
            </div>
            <div class="p-6 bg-white border-t border-blue-50">
                <button onclick="submitExam()" class="w-full bg-gradient-to-r from-orange-500 to-red-500 text-white font-bold py-3 rounded-xl shadow-lg transition transform hover:-translate-y-1 flex items-center justify-center gap-2">
                    <i class="fa-solid fa-paper-plane"></i> <span>NỘP BÀI THI</span>
                </button>
            </div>
        </aside>

        <main class="flex-1 flex flex-col gap-4 overflow-hidden">
            <!-- Header Info -->
            <div class="bg-white rounded-2xl shadow-sm border border-blue-100 p-3 px-6 flex justify-between items-center">
                <div>
                    <h1 class="text-lg font-bold text-gray-800">@Model.Title</h1>
                    <p class="text-xs text-gray-500">Môn Toán • Lớp 9</p>
                </div>
                <div class="flex items-center gap-3 bg-slate-800 text-white px-5 py-2 rounded-xl">
                    <i class="fa-regular fa-clock text-blue-300 animate-pulse"></i>
                    <span id="timer" class="font-mono font-bold text-xl">00:00</span>
                </div>
            </div>

            <!-- Question Area -->
            <div class="flex-1 bg-white rounded-3xl shadow-xl border border-blue-50 flex flex-col overflow-hidden relative">
                <div id="questions-container" class="flex-1 p-6 md:p-12 overflow-y-auto custom-scroll">
                    @for (int i = 0; i < Model.Questions.Count; i++)
                    {
                        var q = Model.Questions[i];
                        <div id="page-@i" class="question-page @(i == 0 ? "active" : "")">
                            <div class="flex gap-6 mb-8">
                                <span class="w-12 h-12 shrink-0 bg-blue-600 text-white rounded-2xl flex items-center justify-center text-xl font-bold shadow-lg shadow-blue-200">@(i + 1)</span>
                                
                                <h2 class="text-2xl font-bold text-gray-800 leading-tight">@q.QuestionText</h2>
                            </div>

                            <div class="grid grid-cols-1 gap-4">
                                @if (q.Options != null)
                                {
                                    @foreach (var opt in q.Options)
                                    {
                                        <div onclick="selectOption(@i, @q.QuestionId, @opt.OptionId, this)"
                                             class="option-card group relative p-6 rounded-2xl border-2 border-gray-100 hover:border-blue-200 hover:bg-blue-50/50 cursor-pointer transition-all duration-200 flex items-center gap-5">
                                            <div class="option-label w-10 h-10 rounded-xl border-2 border-gray-200 flex items-center justify-center font-bold text-lg text-gray-400 transition-colors">
                                                @((char)('A' + q.Options.IndexOf(opt)))
                                            </div>
                                            <!-- ĐÃ SỬA: Hiển thị nội dung phương án @opt.OptionText -->
                                            <span class="text-lg text-gray-700 font-semibold">@opt.OptionText</span>
                                        </div>
                                    }
                                }
                            </div>

                            <!-- AI HINT SECTION -->
                            <div class="mt-8 border-t border-dashed border-blue-100 pt-6">
                                <div id="hint-container-@q.QuestionId" class="hidden mb-4 bg-amber-50 border border-amber-200 rounded-2xl p-5 animate-fade-in">
                                    <div class="flex items-center gap-2 text-amber-700 font-bold mb-2">
                                        <i class="fa-solid fa-lightbulb"></i>
                                        <span>Gợi ý từ AI:</span>
                                    </div>
                                    <p id="hint-text-@q.QuestionId" class="text-gray-700 leading-relaxed"></p>
                                </div>
                                <button onclick="getAIHint(@q.QuestionId)" id="hint-btn-@q.QuestionId" class="flex items-center gap-2 px-5 py-2.5 bg-white border-2 border-amber-400 text-amber-600 font-bold rounded-xl hover:bg-amber-50 transition-all shadow-sm">
                                    <i class="fa-solid fa-robot"></i>
                                    <span>Gợi ý AI</span>
                                </button>
                            </div>
                        </div>
                    }
                </div>

                <!-- Footer Navigation -->
                <div class="p-6 border-t bg-gray-50/50 flex justify-between items-center">
                    <button id="prev-btn" onclick="prevQuestion()" class="px-6 py-3 rounded-xl border-2 border-gray-200 text-gray-600 font-bold hover:bg-white disabled:opacity-30 disabled:cursor-not-allowed transition-all">
                        <i class="fa-solid fa-arrow-left mr-2"></i> Câu trước
                    </button>

                    <div class="flex gap-3">
                        <button id="next-btn" onclick="nextQuestion()" class="px-8 py-3 rounded-xl bg-blue-600 text-white font-bold hover:bg-blue-700 shadow-lg shadow-blue-200 transition-all">
                            Câu tiếp theo <i class="fa-solid fa-arrow-right ml-2"></i>
                        </button>
                        <button id="final-submit-btn" onclick="submitExam()" class="hidden px-8 py-3 rounded-xl bg-green-600 text-white font-bold hover:bg-green-700 shadow-lg shadow-green-200 transition-all">
                            Nộp bài ngay <i class="fa-solid fa-check-double ml-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    @Html.AntiForgeryToken()

    <script>
        let currentIdx = 0;
        const totalQuestions = @Model.Questions.Count;
        let userAnswers = {};
        const attemptId = "@ViewData["AttemptId"]";

        // Init UI
        updateNavigationButtons();
        goToQuestion(0);

        function goToQuestion(index) {
            document.querySelectorAll('.question-page').forEach(page => page.classList.remove('active'));
            const targetPage = document.getElementById(`page-${index}`);
            if(targetPage) targetPage.classList.add('active');

            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));
            const targetBtn = document.getElementById(`nav-btn-${index}`);
            if(targetBtn) targetBtn.classList.add('active');

            currentIdx = index;
            updateNavigationButtons();
        }

        function nextQuestion() {
            if (currentIdx < totalQuestions - 1) goToQuestion(currentIdx + 1);
        }

        function prevQuestion() {
            if (currentIdx > 0) goToQuestion(currentIdx - 1);
        }

        function updateNavigationButtons() {
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const submitBtn = document.getElementById('final-submit-btn');

            if(prevBtn) prevBtn.disabled = (currentIdx === 0);

            if (currentIdx === totalQuestions - 1) {
                if(nextBtn) nextBtn.classList.add('hidden');
                if(submitBtn) submitBtn.classList.remove('hidden');
            } else {
                if(nextBtn) nextBtn.classList.remove('hidden');
                if(submitBtn) submitBtn.classList.add('hidden');
            }
        }

        // --- AI HINT LOGIC ---
        let questionHints = {}; // Lưu level gợi ý cho từng câu hỏi

        async function getAIHint(questionId) {
            const btn = document.getElementById(`hint-btn-${questionId}`);
            const originalContent = btn.innerHTML;
            
            // Loading state
            btn.disabled = true;
            btn.innerHTML = `<i class="fa-solid fa-circle-notch animate-spin"></i> <span>Đang suy nghĩ...</span>`;

            const currentLevel = (questionHints[questionId] || 0) + 1;
            
            // Lấy text của phương án học sinh đang chọn để AI gợi ý sát thực tế hơn
            let currentAnswerText = null;
            const selectedCard = document.querySelector(`.question-page.active .option-card.selected`);
            if (selectedCard) {
                const textSpan = selectedCard.querySelector('span:not(.option-label)');
                if (textSpan) {
                    currentAnswerText = textSpan.innerText.trim();
                }
            }

            const payload = {
                attemptId: parseInt(attemptId),
                questionId: questionId,
                hintLevel: currentLevel,
                studentAnswer: currentAnswerText
            };

            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            try {
                const response = await fetch('/Exam/GetHint', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (result.success) {
                    const hintContainer = document.getElementById(`hint-container-${questionId}`);
                    const hintTextEl = document.getElementById(`hint-text-${questionId}`);
                    
                    hintTextEl.innerText = result.data.hintText;
                    hintContainer.classList.remove('hidden');
                    
                    questionHints[questionId] = result.data.hintLevel;
                    
                    if (result.data.hintLevel >= 3) {
                        btn.innerHTML = `<i class="fa-solid fa-check"></i> <span>Đã hết gợi ý</span>`;
                        btn.disabled = true;
                        btn.classList.add('opacity-50');
                    } else {
                        btn.innerHTML = `<i class="fa-solid fa-robot"></i> <span>Gợi ý tiếp theo</span>`;
                        btn.disabled = false;
                    }
                } else {
                    alert(result.message || "Không thể lấy gợi ý lúc này.");
                    btn.innerHTML = originalContent;
                    btn.disabled = false;
                }
            } catch (error) {
                console.error("AI Hint Error:", error);
                alert("Lỗi kết nối server AI.");
                btn.innerHTML = originalContent;
                btn.disabled = false;
            }
        }

        function selectOption(index, qId, optId, cardElement) {
            const container = cardElement.parentElement;
            container.querySelectorAll('.option-card').forEach(el => {
                el.classList.remove('selected');
                el.querySelector('.option-label').classList.remove('selected');
            });

            cardElement.classList.add('selected');
            cardElement.querySelector('.option-label').classList.add('selected');

            userAnswers[qId] = optId;
            document.getElementById(`nav-btn-${index}`).classList.add('answered');
            updateStats();
        }

        function updateStats() {
            const answeredCount = Object.keys(userAnswers).length;
            document.getElementById('answered-count').innerText = answeredCount;
            document.getElementById('unanswered-count').innerText = totalQuestions - answeredCount;
        }

        // --- TIMER LOGIC (ROBUST INITIALIZATION) ---
        let rawTime = "@ViewData["Time"]" || "15:00";
        let totalSeconds = 0;

        if (rawTime.toString().includes(':')) {
            // Trường hợp định dạng "MM:SS"
            let parts = rawTime.split(':');
            totalSeconds = (parseInt(parts[0]) || 0) * 60 + (parseInt(parts[1]) || 0);
        } else {
            // Trường hợp chỉ trả về số phút (ví dụ: 15 hoặc "15")
            totalSeconds = (parseInt(rawTime) || 15) * 60;
        }

        const timerEl = document.getElementById('timer');

        const timerInterval = setInterval(() => {
            if (totalSeconds <= 0) {
                clearInterval(timerInterval);
                timerEl.innerText = "00:00";
                submitExam(true);
                return;
            }

            const mins = Math.floor(totalSeconds / 60);
            const secs = totalSeconds % 60;

            timerEl.innerText = `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;

            totalSeconds--;
        }, 1000);

                async function submitExam(force = false) {
            // 1. Kiểm tra nếu chưa làm câu nào thì cảnh báo
            const answeredCount = Object.keys(userAnswers).length;
            if (!force && answeredCount === 0) {
                alert("Bạn chưa trả lời câu hỏi nào!");
                return;
            }

            if (!force && !confirm(`Bạn đã làm ${answeredCount}/${totalQuestions} câu. Bạn có chắc chắn muốn nộp bài?`)) return;

            // 2. Chuan bi Payload (ÉP KIỂU SỐ Ở ĐÂY)
            const payload = {
                attemptId: parseInt(attemptId),
                answers: Object.keys(userAnswers).map(key => ({
                    questionId: parseInt(key),           // Chắc chắn là Số
                    selectedOptionId: parseInt(userAnswers[key]) // Chắc chắn là Số
                }))
            };

            // LOG RA ĐỂ KIỂM TRA (An nhấn F12 để xem dòng này nhé)
            console.log("Dữ liệu nộp bài chuẩn:", payload);

            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            try {
                const response = await fetch('/Exam/Submit', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(payload)
                });

                if (response.ok) {
                    // Nộp thành công, chuyển đến trang kết quả
                    window.location.href = `/Exam/Result?attemptId=${attemptId}`;
                } else {
                    const errorData = await response.json();
                    alert("Lỗi: " + (errorData.message || "Không thể nộp bài."));
                }
            } catch (error) {
                console.error("Submit error:", error);
                alert("Mất kết nối với máy chủ khi đang nộp bài.");
            }
        }
    </script>
</body>
</html>