    <style>
        /* Hiệu ứng mở cửa sổ chat */
        #chat-window.active {
            display: block;
            opacity: 1;
            transform: scale(1);
        }

        /* Animation cho tin nhắn mới */
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        #chat-messages > div {
            animation: slideIn 0.3s ease-out forwards;
        }

        /* Chatbot notification animations */
        @@keyframes slideInFromBottom {
            from {
                opacity: 0;
                transform: translateY(20px) scale(0.95);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        @@keyframes slideOutToBottom {
            from {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
            to {
                opacity: 0;
                transform: translateY(20px) scale(0.95);
            }
        }

        #chatbot-notification.show {
            opacity: 1;
            pointer-events: auto;
            animation: slideInFromBottom 0.5s ease-out forwards;
        }

        #chatbot-notification.hide {
            animation: slideOutToBottom 0.4s ease-in forwards;
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function toggleChat() {
            const chatWindow = document.getElementById('chat-window');
            const chatIcon = document.getElementById('chat-icon');

            if (chatWindow.classList.contains('hidden')) {
                // Mở chat
                chatWindow.classList.remove('hidden');
                setTimeout(() => {
                    chatWindow.classList.add('active');
                }, 10);
                chatIcon.classList.remove('fa-comment-dots');
                chatIcon.classList.add('fa-chevron-down');
            } else {
                // Đóng chat
                chatWindow.classList.remove('active');
                setTimeout(() => {
                    chatWindow.classList.add('hidden');
                }, 300);
                chatIcon.classList.remove('fa-chevron-down');
                chatIcon.classList.add('fa-comment-dots');
            }
        }

        // Chatbot notification functions
        function closeChatbotNotification() {
            const notification = document.getElementById('chatbot-notification');
            notification.classList.remove('show');
            notification.classList.add('hide');
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 400);
        }

        function openChatFromNotification() {
            // Close notification
            closeChatbotNotification();
            
            // Open chat window
            setTimeout(() => {
                toggleChat();
            }, 300);
        }

        // Show notification ONLY on Home/Index immediately and don't auto-hide
        window.addEventListener('DOMContentLoaded', () => {
            const isHomePage = "@currentController" === "Home" && "@currentAction" === "Index";
            const notification = document.getElementById('chatbot-notification');
            
            if (isHomePage && notification) {
                // Show immediately when home page is loaded
                notification.classList.add('show');
            } else if (notification) {
                // Hide on other pages
                notification.style.display = 'none';
            }
        });
    </script>
