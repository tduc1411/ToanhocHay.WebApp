    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }

        /* Smooth dropdown animations */
        .dropdown-menu {
            visibility: hidden;
            opacity: 0;
            transform: translateY(-10px);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .group:hover .dropdown-menu {
            visibility: visible;
            opacity: 1;
            transform: translateY(0);
        }
        

        /* --- Sửa lại phần Submenu của bạn ở đây --- */
        .dropdown-submenu {
            visibility: hidden;
            opacity: 0;
            transform: translateX(10px); /* Đẩy nhẹ từ phải qua */
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: absolute;
            left: 100%; /* Đưa sang bên phải */
            top: 0;
            padding-left: 8px; /* Tạo khoảng đệm nhỏ */
        }

        .group\/sub:hover > .dropdown-submenu {
            visibility: visible;
            opacity: 1;
            transform: translateX(0);
        }

        /* Gradient text effect */
        .gradient-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Hover animation for logo */
        .logo-container:hover img {
            transform: scale(1.05) rotate(2deg);
        }

        .logo-container img {
            transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        /* Search bar glow effect */
        .search-input:focus {
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }

        /* Active nav item indicator */
        .nav-item-active {
            position: relative;
        }

        .nav-item-active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #2563EB, #3B82F6);
            border-radius: 2px 2px 0 0;
        }

        /* Mobile menu toggle */
        .mobile-menu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
        }

        .mobile-menu.active {
            max-height: 500px;
        }

        /* Subtle animation for footer social icons */
        .social-icon {
            transition: all 0.3s ease;
        }

        .social-icon:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
