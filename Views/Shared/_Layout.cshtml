    <div id="chatbot-container" class="fixed bottom-6 right-6 z-[9999] flex flex-col items-end">
        <div id="chat-window" class="hidden mb-4 w-80 md:w-96 bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden transition-all duration-300 transform scale-95 opacity-0 origin-bottom-right">
            <div class="bg-primary p-4 flex justify-between items-center text-white">
