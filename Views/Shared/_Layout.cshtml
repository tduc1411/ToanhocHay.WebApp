    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const duration = 10 * 1000;
            const animationEnd = Date.now() + duration;

            function randomInRange(min, max) {
                return Math.random() * (max - min) + min;
            }

            // Hàm tạo pháo bay lên rồi nổ
            function launchFirework() {
                const startX = Math.random();
                const endY = Math.random() * 0.3 + 0.1;
                const launchDuration = randomInRange(1000, 1400);
                const startTime = Date.now();

                const trailColors = [
                    ['#FFD700', '#FFA500'],
                    ['#FF0000', '#FF4500'],
                    ['#FFFFFF', '#FFF59D']
                ];
                const selectedTrail = trailColors[Math.floor(Math.random() * trailColors.length)];

                // Vẽ vệt bay lên
                function animateTrail() {
                    const elapsed = Date.now() - startTime;
                    const progress = Math.min(elapsed / launchDuration, 1);

                    if (progress < 1) {
                        const currentY = 1 - (progress * (1 - endY));

                        confetti({
                            particleCount: 2,
                            startVelocity: 0,
                            spread: 8,
                            origin: { x: startX, y: currentY },
                            colors: selectedTrail,
                            scalar: 0.6,
                            gravity: 0.3,
                            ticks: 25,
                            drift: randomInRange(-0.3, 0.3)
                        });

                        requestAnimationFrame(animateTrail);
                    } else {
                        explodeFirework(startX, endY);
                    }
                }

                animateTrail();
            }

            // Hàm tạo vụ nổ 360° THẬT SỰ
            function explodeFirework(x, y) {
                const fireworkType = Math.floor(Math.random() * 5);

                switch(fireworkType) {
                    case 0: // Pháo tròn đều 360° - CHUẨN
                        confetti({
                            particleCount: 150,
                            angle: 90, // QUAN TRỌNG: góc 90 độ (hướng lên)
                            spread: 360, // Tỏa toàn bộ 360°
                            startVelocity: 45,
                            origin: { x, y },
                            colors: ['#FFD700', '#FF0000', '#FF4500', '#FFFF00', '#FFA500'],
                            scalar: randomInRange(1, 1.8),
                            gravity: 0.9,
                            drift: randomInRange(-2, 2),
                            ticks: 160
                        });
                        break;

                    case 1: // Pháo 360° với tia dài ngắn không đều
                        confetti({
                            particleCount: 130,
                            angle: 90,
                            spread: 360,
                            startVelocity: randomInRange(35, 55), // Vận tốc ngẫu nhiên tạo tia dài ngắn
                            origin: { x, y },
                            colors: ['#E91E63', '#9C27B0', '#3F51B5', '#FFD700'],
                            scalar: randomInRange(0.9, 2.2), // Kích thước khác nhau
                            gravity: randomInRange(0.7, 1.1),
                            drift: randomInRange(-3, 3),
                            ticks: 150
                        });
                        break;

                    case 2: // Pháo 360° dạng tia (line)
                        confetti({
                            particleCount: 120,
                            angle: 90,
                            spread: 360,
                            startVelocity: 50,
                            origin: { x, y },
                            colors: ['#00BCD4', '#03A9F4', '#FFFFFF', '#80DEEA'],
                            shapes: ['line'],
                            scalar: randomInRange(1.5, 3), // Tia dài ngắn
                            gravity: 1.2,
                            drift: randomInRange(-2, 2),
                            ticks: 200
                        });
                        break;

                    case 3: // Pháo 360° kim tuyến (star)
                        confetti({
                            particleCount: 110,
                            angle: 90,
                            spread: 360,
                            startVelocity: 40,
                            origin: { x, y },
                            colors: ['#FFFFFF', '#FFD700', '#FFF59D', '#FFEB3B', '#FFC107'],
                            shapes: ['star'],
                            scalar: randomInRange(1, 2.5),
                            gravity: 0.7,
                            drift: randomInRange(-2.5, 2.5),
                            ticks: 140
                        });
                        break;

                    case 4: // Pháo 360° nhiều tầng (nổ liên hoàn)
                        // Tầng 1 - ngoài cùng
                        confetti({
                            particleCount: 100,
                            angle: 90,
                            spread: 360,
                            startVelocity: 50,
                            origin: { x, y },
                            colors: ['#FF0000', '#FF4500', '#FFD700'],
                            scalar: 1.6,
                            gravity: 0.8,
                            ticks: 130
                        });

                        // Tầng 2 - giữa (chậm 0.2s)
                        setTimeout(() => {
                            confetti({
                                particleCount: 80,
                                angle: 90,
                                spread: 360,
                                startVelocity: 40,
                                origin: { x, y: y + 0.02 },
                                colors: ['#FFA500', '#FFFF00', '#FFFFFF'],
                                scalar: 1.3,
                                gravity: 0.9,
                                ticks: 150
                            });
                        }, 200);

                        // Tầng 3 - trong cùng (chậm 0.4s)
                        setTimeout(() => {
                            confetti({
                                particleCount: 60,
                                angle: 90,
                                spread: 360,
                                startVelocity: 30,
                                origin: { x, y: y + 0.04 },
                                colors: ['#FFD700', '#FFF59D', '#FFEB3B'],
                                shapes: ['star'],
                                scalar: 1.1,
                                gravity: 1,
                                ticks: 170
                            });
                        }, 400);
                        break;
                }
            }

            // Bắn nhiều hơn
            const interval = setInterval(() => {
                const timeLeft = animationEnd - Date.now();

                if (timeLeft <= 0) {
                    return clearInterval(interval);
                }

                // Bắn 1-2 quả mỗi lần
                const numFireworks = Math.random() > 0.35 ? 2 : 1;

                for (let i = 0; i < numFireworks; i++) {
                    setTimeout(() => {
                        launchFirework();
                    }, i * 300);
                }

            }, 1300); // Bắn nhanh hơn - mỗi 0.9 giây

            // Grand Finale
            setTimeout(() => {
                for (let i = 0; i < 8; i++) {
                    setTimeout(() => {
                        launchFirework();
                    }, i * 180);
                }
            }, duration - 2500);
        });
    </script>
