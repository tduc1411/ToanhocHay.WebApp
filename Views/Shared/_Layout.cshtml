    <style>
        /* Hiệu ứng mở cửa sổ chat */
        #chat-window.active {
            display: block;
            opacity: 1;
            transform: scale(1);
        }

        /* Animation cho tin nhắn mới */
        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        #chat-messages > div {
