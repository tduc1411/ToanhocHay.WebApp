    </script>
    <script src="~/js/chatbot.js" asp-append-version="true"></script>
    <script>
        // 1. Hàm cập nhật ảnh Header toàn cục
        function updateGlobalAvatar(newStyle, seed) {
            const headerImg = document.getElementById('global-header-avatar');
            if (headerImg) {
                headerImg.src = `https://api.dicebear.com/7.x/${newStyle}/svg?seed=${seed}`;
            }
        }

        // 2. Tự động load style đã lưu khi chuyển trang
                document.addEventListener('DOMContentLoaded', () => {
            const savedStyle = localStorage.getItem('user_avatar_style') || 'fun-emoji';
            const userName = "@User.Identity?.Name";
            if (userName && userName !== "") {
                // Hàm này sẽ đổi ảnh trên Header ngay khi load trang
                updateGlobalAvatar(savedStyle, userName);
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
